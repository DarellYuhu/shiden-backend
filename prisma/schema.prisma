generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account      PlatformAccount[]
  threadMember ThreadMember[]
}

model PlatformAccount {
  id        String   @id @default(uuid())
  username  String   @unique
  signature String? // something like account bio
  platform  Platform
  followers Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId   String?
  avatarId Int?

  user   User?  @relation(fields: [userId], references: [id])
  avatar File?  @relation(fields: [avatarId], references: [id])
  feed   Feed[]
}

model Thread {
  id          String   @id @default(uuid())
  name        String
  isPublic    Boolean  @default(false)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  threadMember ThreadMember[]
  source       Source[]
}

model ThreadMember {
  id        String     @id @default(uuid())
  userId    String
  threadId  String
  role      ThreadRole @default(USER)
  isEnabled Boolean    @default(true)

  user   User   @relation(fields: [userId], references: [id])
  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  feed   Feed[]

  @@unique([userId, threadId])
}

model Source {
  id            String @id @default(uuid())
  workgroupName String
  workgroupId   String

  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  threadId String
}

model Feed {
  id          String   @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  contentMeta Json

  threadMemberId    String
  platformAccountId String?

  threadMember    ThreadMember     @relation(fields: [threadMemberId], references: [id])
  platformAccount PlatformAccount? @relation(fields: [platformAccountId], references: [id])
  content         Content?
}

model Content {
  id          String    @id
  link        String
  duration    Int?
  createTime  DateTime?
  description String?

  coverId Int?
  feedId  String @unique

  statistic Statistic?
  cover     File?      @relation(fields: [coverId], references: [id])
  feed      Feed       @relation(fields: [feedId], references: [id])
}

model Statistic {
  view    Int
  like    Int
  comment Int
  share   Int
  other   Json?

  contentId String  @unique
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
}

model File {
  id       Int    @id @default(autoincrement())
  filename String
  bucket   String
  path     String
  fullPath String
  mimeType String

  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  content   Content[]
  account   PlatformAccount[]
}

enum Platform {
  TIKTOK
  FACEBOOK
  INSTAGRAM
  X
}

enum ThreadRole {
  ADMIN
  OWNER
  USER
}
